
ACTION=${1:-install}
NAME=${2}
IP_NAME=${3:-ip${NAME}${LOCATION}${MYENV}${VERSION}}

if [ $ACTION = install ]; then
if [ ${SERVICE_DNS_CREATE} = dns ]; then

export AKS_RESOURCE_GROUP=`az aks show --query nodeResourceGroup --name $AKS_CLUSTER --resource-group $RESOURCE_GROUP --output tsv`

./ip-pub ${AKS_RESOURCE_GROUP} ${IP_NAME} 
IP=`./ip-get ${AKS_RESOURCE_GROUP} ${IP_NAME}`
./afd-profile ${RESOURCE_GROUP}
./afd-origin ${RESOURCE_GROUP} ${NAME} "${IP}"
fi
fi